{
    "name": "Popcorn Comments",
    "version": "1.0",    
    "description": "Popcorn comments :)",
    "manifest_version": 2,
    "browser_action": {        
        "default_popup": "popup.html"       
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "https://us-central1-popcorn-comments.cloudfunctions.net/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["inject.js"]
        }
    ]
}